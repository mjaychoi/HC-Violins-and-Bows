{
  "name": "inventory-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=1 next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "type-check": "tsc --noEmit",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:postgres": "tsx scripts/migrate.ts --postgres",
    "migrate:cli": "tsx scripts/migrate.ts --cli",
    "migrate:sh": "bash scripts/migrate.sh",
    "migrate:subtype": "tsx scripts/migrate-subtype.ts",
    "migrate:maintenance": "tsx scripts/migrate-maintenance-tasks.ts",
    "populate:numbers": "tsx scripts/populate-unique-numbers.ts",
    "fix:ownership": "tsx scripts/fix-ownership-uuids.ts",
    "seed:data": "tsx scripts/seed-sample-data.ts",
    "generate:sample-data": "tsx scripts/generate-sample-data.ts",
    "schema:check": "tsx scripts/check-schema.ts",
    "schema:export": "tsx scripts/check-schema.ts"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/supabase-js": "^2.51.0",
    "@types/react-window": "^1.8.8",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "next": "^15.5.6",
    "react": "19.1.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "19.1.0",
    "react-window": "^2.2.1",
    "react-window-infinite-loader": "^2.0.0",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
